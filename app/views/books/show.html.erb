<div class="show">
    <% if @book.errors.any? %>
        <div class="error-message">
            <h5><%=pluralize(@book.errors.count, "error") %> prohibited this product form begin saved:</h5>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
                <li><%=message %></li>
            <% end %>
            </ul>
        </div>
    <% end %>

    <% if flash[:notice] %>
    <p id="notice" class="message">
        <%= flash[:notice] %>
    </p>
    <% end %>

    <p class="show-content"><strong>Title:</strong> <%=@book.title %></p>

    <p class="show-content"><strong>Body:</strong> <%=@book.body %></p>
</div>

<div class="show-link">
    <%=link_to"Edit",edit_book_path(@book.id) %> | <%=link_to "Back","/books"%>
</div>