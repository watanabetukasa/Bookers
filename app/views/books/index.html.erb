<header>
    <div class="content">
    <h1 class="title">Books</h1>
        <table class="book">
            <tr class="book-list">
                <th>Title</th>
                <th>Body</th>
                <th></th>
            </tr>
            <% @books.each do |book| %>
            <tr class="book-list">
                <th class="book-list-show"><%=book.title %></th>
                <th class="book-list-show"><%=book.body %></th>
                <th class="book-list-show">
                    <span class="book-link"><%=link_to"Show" ,book_path(book.id) %></span>
                    <span class="book-link"><%=link_to"Edit" ,edit_book_path(book.id) %></span>
                    <span class="book-link"><%=link_to"Destroy" ,destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></span>
                </th>
            <% end %>
            </tr>
        </table>
        </div>


    <div class="new-book">
        <h2>New book</h2>
        <%= form_with model:@book,url:'/books',local:true do |f| %>


        <% if @book.errors.any? %>
            <div class="error-message">
                <h5><%=pluralize(@book.errors.count, "error") %> prohibited this product form begin saved:</h5>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%=message %></li>
                    <% end %>
                </ul>
            </div>
            <% end %>


        <div class="new-book-update">title
        <br><%=f.text_field:title %>
        </div>

        <div class="new-book-update">Body
        <br><%=f.text_area:body %>
        </div>

        <%=f.submit'Create Book' %>
        <% end %>
    </div>
</header>
